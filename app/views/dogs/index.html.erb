<div class="d-flex pt-3 pb-4 justify-content-center">
  <div>
    <%= form_tag dogs_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control input-style mt-1", id:"address",
        placeholder: "Find Paw Pals"
      %>
  </div>
   <div>
    <%= submit_tag "Search", class: "mt-1 btn search-btn" %>
  <% end %>
  </div>
</div>


<div class="container">
  <div class="cards">
    <% @dogs.each do |dog| %>
    <%= link_to dog_path(dog) do %>
    <div class="card-trip">
    <% if dog.photos %>
      <%= cl_image_tag dog.photos.first.key %>
    <% end %>
      <div class="card-trip-infos">
        <div>
          <h2> <%= dog.name %> </h2>
          <p> <%= dog.breed %> </p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
