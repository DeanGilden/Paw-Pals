<div class="form-pawpals-create form-text form-style col-6 offset-3 p-5 rounded">
<%= simple_form_for [dog] do |f| %>
    <%= f.input :name, required: false, placeholder: "What is your dog's name?"%>
    <%= f.input :breed, required: false, placeholder: "What is your dog's breed?" %>
    <%= f.input :age, required: false, placeholder: "What is your dog's age?" %>
    <%= f.input :sex, required: false, placeholder: "What sex is your dog?" %>
    <%= f.input :temperament, collection: Dog::TEMPERAMENTS.keys, required: false, placeholder: "What is your dog's temperament?" %>
    <%= f.input :description, required: false, class: ".bg-light", placeholder: 'Please enter a description of your dog:'  %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.button :submit, class: "btn btn-pawpals text-center", id: "create-dog-btn" %>
  <% end %>
</div>
